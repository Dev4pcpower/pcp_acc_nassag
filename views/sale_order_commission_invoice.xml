<odoo>
    <data>
        <record id="view_order_form_inherit_commission_invoice" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel_commission']" position="after">
			    	<button string="Commission Invoice" name="%(pcp_acc_nassag.action_commission_invoice_wizard)d" type="action" class="oe_highlight"
                     attrs="{'invisible': [('is_commission','=',False)]}"/>
			    </xpath>
            </field>
        </record>
    </data>
</odoo>