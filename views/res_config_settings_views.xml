<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.commission</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="commission" string="commission" data-key="sale_management" groups="sales_team.group_sale_manager">
                    <h2>Invoicing Commission</h2>
                    <div class="row mt16 o_settings_container" name="invoicing_commission_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="account_commission_debit">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Account Commission Debit</span>
                                <div class="text-muted">
                                    <field name="account_commission_debit" />
                                </div>
                                <span class="o_form_label">Account Commission Credit</span>
                                <div class="text-muted">
                                    <field name="account_commission_credit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>





</odoo>
